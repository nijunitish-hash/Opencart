<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite">

    <!-- 1. Optional groups -->
    <groups>
        <run>
            <include name="Sanity"/>
            <include name="Regression"/>
            
            
           <include name= "functionalTesting"/>
        </run>
    </groups>

    <!-- 2. Listeners -->
    <listeners>
        <listener class-name="utilities.extentreportgenerator"/>
    </listeners>

    <!-- 3. Tests -->
    <test name="Tests1">
        <parameter name="os" value="Windows"/>
        <parameter name="browser" value="edge"/>

        <classes>
            <class name="testcase.tc__001"/>
            <class name="testcase.datadriventestcase"/>
            <class name="testcase.loginTestcase"/>
        </classes>
    </test>

</suite>
